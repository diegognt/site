---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="My Resume" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/rocket.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --white: 60, 100%, 100%;
    --grey-one:0, 0%, 88%;
    --grey-two: 0, 2%, 87%;
    --grey-three: 0, 0%, 78%;
    --grey-four: 218, 7%, 68%;
    --grey-five: 0, 0%, 25%;
    --black: 247, 24%, 7%;
    --font-sans: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
      Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
      sans-serif;
    --font-mono: ui-monospace, "Cascadia Code", "Source Code Pro", Menlo,
      Consolas, "DejaVu Sans Mono", monospace;
    --font-monospace-slab-serif: font-family: 'Nimbus Mono PS', 'Courier New', monospace;
  }

  html {
    font-family: var(--font-mono);
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  body {
    background-color: hsl(var(--white));
    color: hsl(var(--black));
    font-size: 1rem;
    line-height: 1.5;
    margin: 0;
    padding: 0;
    scroll-behavior: smooth;
  }

  h1,
  h2,
  h3,
  h4 {
    color: hsl(var(--grey-five));
    font-family: var(--font-sans);
    line-height: 1;
    margin: 0;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  p {
    color: hsl(var(--grey-five));
    font-family: var(--font-monospace-slab-serif);
    font-size: .95rem;
    line-height: 1.25;
    margin: 0;
    text-wrap: pretty;
  }
</style>
